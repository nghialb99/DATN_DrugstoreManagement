@using DrugstoreManagement.ViewModels.Common
@model PageResult<DrugstoreManagement.ViewModels.System.Users.UserVm>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
      <h1>Quản lý người dùng</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
          <li class="breadcrumb-item">Người dùng</li>
          @*<li class="breadcrumb-item active">Data</li>*@
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body" style="overflow-x:auto"> 
              <h5 class="card-title">Danh sách người dùng</h5>
              
              <p><a asp-action="Create">Thêm mới</a></p>
              <!-- Table with stripped rows -->
              <table class="table datatable table-hover">
                <thead>
                    <tr>
                        <th style="width:5000px">
                            Tên đăng nhập
                        </th>
                        <th style="width:5000px">
                            Họ
                        </th>
                        <th style="width:5000px">
                            Tên
                        </th>
                        <th style="width:5000px">
                            Ngày sinh
                        </th>
                        <th style="width:5000px">
                            Mã nhân viên
                        </th>
                        <th style="width:5000px">
                            Ngày tạo
                        </th>
                        <th style="width:5000px">
                            Email
                        </th>
                        <th style="width:5000px">
                            Số điện thoại
                        </th>
                        <th style="width:5000px">
                            Ngày cuối đăng nhập
                        </th>
                        <th style="width:5000px">
                            Trạng thái
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @{string _Dob = item.Dob.ToString("yyyy/MM/dd");}
                            @Html.DisplayFor(modelItem => _Dob)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.employeeId)
                        </td>
                        <td>
                            @{string _dateCreated = item.dateCreated.ToString("yyyy/MM/dd");}
                            @Html.DisplayFor(modelItem => _dateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @{DateTimeOffset? _LockoutEnd = item.LockoutEnd;}
                            @Html.DisplayFor(modelItem => _LockoutEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LockoutEnabled)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                    }
                </tbody>
                
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>