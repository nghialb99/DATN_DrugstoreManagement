@using DrugstoreManagement.ViewModels.Common
@model PageResult<DrugstoreManagement.ViewModels.System.Users.UserVm>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
      <h1>Quản lý người dùng</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
          <li class="breadcrumb-item">Người dùng</li>
          @*<li class="breadcrumb-item active">Data</li>*@
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">
             <div class="card-2">
            <div class="card-body-2" > 
              <h5 class="card-title">Danh sách người dùng</h5>
              <div class="nav-item" style="padding-bottom: 5px">
                  <a class="btn-ct" asp-area="" asp-controller="User" asp-action="Create">
                    <i class="bi"><img src="https://localhost:5077/assets/Resouse/icons8-add-100.png" width="35" height="35"/></i>
                    <span>Thêm mới</span>
                  </a>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-body" style="overflow-x:auto"> 
              <!-- Table with stripped rows -->
              <table class="table datatable table-hover">
                <thead>
                    <tr>
                        <th scope="col">
                            Tên đăng nhập
                        </th>
                        <th scope="col">
                            Họ
                        </th>
                        <th scope="col">
                            Tên
                        </th>
                        <th scope="col">
                            Ngày sinh
                        </th>
                        <th scope="col">
                            Mã nhân viên
                        </th>
                        <th scope="col">
                            Ngày tạo
                        </th>
                        <th scope="col">
                            Email
                        </th>
                        <th scope="col">
                            Số điện thoại
                        </th>
                        @*<th scope="col">
                            Ngày cuối đăng nhập
                        </th>*@
                        <th scope="col">
                            Trạng thái
                        </th>
                        <th scope="col">#</th>
                        <th scope="col">#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items) {
                    <tr>
                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @{string _Dob = item.Dob.ToString("yyyy/MM/dd");}
                            @Html.DisplayFor(modelItem => _Dob)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.employeeId)
                        </td>
                        <td>
                            @{string _dateCreated = item.dateCreated.ToString("yyyy/MM/dd");}
                            @Html.DisplayFor(modelItem => _dateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        @*<td>
                            @{DateTimeOffset? _LockoutEnd = item.LockoutEnd;}
                            @Html.DisplayFor(modelItem => _LockoutEnd)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.LockoutEnabled)
                        </td>
                        <td>
                            @Html.ActionLink("Chi tiết", "Details", new { /* id=item.PrimaryKey */ })
                           
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { /* id=item.PrimaryKey */ }) | 
                            @Html.ActionLink("Khóa", "Lock", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                    }
                </tbody>
                
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>